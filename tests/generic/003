#!/bin/bash

. common/fio_common
. common/loop_common

ublk_run_mount_test()
{
	echo -n -e "\tmount/umount ublk device with root fstype(uring_comp: $1, get_data: $2, recovery $3, recovery_reissue $4)..."
	__create_ublk_dev "loop" $QUEUES $1 $2 $3 $4

	ROOT_FSTYPE=`findmnt -l -o FSTYPE -n /`

	wipefs -a $DEV > /dev/null 2>&1
	eval mkfs.${ROOT_FSTYPE} $DEV > /dev/null 2>&1

	mount $DEV  $MNT > /dev/null 2>&1

	UBLK_FSTYPE=`findmnt -l -o FSTYPE -n $MNT`
	if [ "$UBLK_FSTYPE" = "$ROOT_FSTYPE" ]; then
			echo "ok"
	else
			echo "failed"
	fi
	umount $MNT > /dev/null 2>&1

	__remove_ublk_dev 0
}

DEV=/dev/ublkb0
QUEUES=2
MNT=`mktemp -d`
URING_COMP=1
NEED_GET_DATA=1
RECOVERY=0
RECOVERY_REISSUE=0

file=`_create_loop_backing_file "loop"`
export T_TYPE_PARAMS=" -f $file"

for NEED_GET_DATA in `seq 0 1`; do
	ublk_run_mount_test $URING_COMP $NEED_GET_DATA $RECOVERY $RECOVERY_REISSUE
done

RECOVERY=1
for RECOVERY_REISSUE in `seq 0 1`; do
	ublk_run_mount_test $URING_COMP $NEED_GET_DATA $RECOVERY $RECOVERY_REISSUE
done

rm -fr $MNT
[ -f "$file" ] && rm -f $file
