#!/bin/bash

. common/fio_common

echo -e "\trun fio with kill ubq_deamon and delete(NOWAIT) ublk-loop test"

DEV=/dev/ublkb0
BS=4k
RW=rw
JOBS=4
QUEUES=4
RT=$TRUNTIME
LOOPS=4
URING_COMP=1
NEED_GET_DATA=1
RECOVERY=0
RECOVERY_REISSUE=0


ublk_run_delete_test()
{
	for CNT in `seq $LOOPS`; do
		__create_ublk_dev "loop" $QUEUES $URING_COMP $NEED_GET_DATA $RECOVERY $RECOVERY_REISSUE
		echo -e "\trun fio on ublk(uring_comp $URING_COMP, get_data $NEED_GET_DATA, recovery $RECOVERY, recovery_reissue $RECOVERY_REISSUE) with delete $CNT"
		__run_fio_libaio "/dev/ublkb0" $BS $RW $JOBS $RT > /dev/null 2 >& 1 &
		sleep 2
		queue_tid=`__ublk_get_queue_tid 0`
		kill -9 $queue_tid
		RES=`__remove_ublk_dev_return 0`
		if [ $RES -ne 0 ]; then
				echo -e "\tdelete ublk0 failed"
				ps -eLf | grep ublk
				(cd /sys/kernel/debug/block/ublkb0 && find . -type f -exec grep -aH . {} \;)
				break
		fi
		wait
	done
}

file=`_create_loop_backing_file "loop"`
export T_TYPE_PARAMS=" -f $file"

for NEED_GET_DATA in `seq 0 1`; do
	ublk_run_delete_test
done

RECOVERY=1
for RECOVERY_REISSUE in `seq 0 1`; do
	ublk_run_delete_test
done

[ -f "$file" ] && rm -f $file
